#to score for RootCA certs
mkdir /etc/ssl/CA
# convert from crt to pem
openssl x509 -in ca.crt -out cacert.pem

# for crl revocation list
./easyrsa gen-crl

cp ca.crt /usr/local/share/ca-certificate/
update-ca-certificate